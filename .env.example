# Mastodon instance domain (no protocol)
MASTODON_INSTANCE=mastodon.social

# Optional: Access token with read (or read:statuses) scope
# Generate via Mastodon → Preferences → Development → New application
MASTODON_ACCESS_TOKEN=

# Optional: Comma-separated banned words (case-insensitive)
BANNED_WORDS=nsfw,xxx,sex,porn,porno

# API port (Express server)
PORT=8080